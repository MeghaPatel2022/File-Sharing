<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        tools:context=".Activity.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context=".Activity.MainActivity">

            <include layout="@layout/custome_toolbar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".Activity.MainActivity">

                <LinearLayout
                    android:id="@+id/lay_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_100sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:background="@color/white"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/connected_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dim_10"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dim_20"
                        android:paddingTop="@dimen/dim_10"
                        android:paddingRight="@dimen/dim_20"
                        android:paddingBottom="@dimen/dim_10"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context=".Activity.MainActivity">

                        <RelativeLayout
                            android:id="@+id/rl_main1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/_10sdp"
                            android:visibility="invisible">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize">

                                <ImageView
                                    android:id="@+id/img_logo"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:padding="@dimen/_2sdp"
                                    android:src="@drawable/icon" />

                                <TextView
                                    android:id="@+id/tv_app_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_toRightOf="@id/img_logo"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"
                                    android:text="@string/app_name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_13sdp" />
                            </RelativeLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/lay_sender"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/rl_main1"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:background="@drawable/full_curve">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:layout_marginBottom="@dimen/_20sdp"
                                    android:background="@android:color/transparent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dim_20"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/roboto_medium"
                                        android:gravity="center_horizontal"
                                        android:text="Scan QR code"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_18sdp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/dim_20"
                                        android:background="@android:color/transparent"
                                        android:gravity="center_horizontal"
                                        android:text="@string/str_scan_qr"
                                        android:textSize="16sp" />

                                </LinearLayout>


                            </LinearLayout>

                            <ImageView
                                android:id="@+id/img_qrcode"
                                android:layout_width="@dimen/_200sdp"
                                android:layout_height="@dimen/_200sdp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_50sdp"
                                android:background="@drawable/ic_scan"
                                android:padding="@dimen/_20sdp" />

                            <TextView
                                android:id="@+id/txt_device_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:gravity="center_horizontal"
                                android:maxLines="1"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_13sdp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom|center"
                                android:layout_marginBottom="@dimen/_40sdp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_80sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    app:cardBackgroundColor="@color/red"
                                    app:cardCornerRadius="@dimen/_20sdp"
                                    app:cardElevation="@dimen/_1sdp">

                                    <TextView
                                        android:id="@+id/bnt_stop"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/roboto_medium"
                                        android:gravity="center"
                                        android:padding="@dimen/_10sdp"
                                        android:text="@string/action_cancel"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_13sdp"
                                        android:visibility="visible" />

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>


                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/lay_receiver"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone">

                            <com.bbot.copydata.xender.RecyclerViewEmptySupport
                                android:id="@+id/my_circular_list"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_250sdp"
                                android:layout_centerInParent="true"
                                android:layout_margin="@dimen/dim_20"
                                android:gravity="center" />

                            <pl.bclogic.pulsator4droid.library.PulsatorLayout
                                android:id="@+id/pulsator"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:layout_centerInParent="true"
                                app:pulse_color="@color/colorPrimary"
                                app:pulse_count="3"
                                app:pulse_duration="7000"
                                app:pulse_interpolator="Decelerate"
                                app:pulse_repeat="0"
                                app:pulse_startFromScratch="true">

                            </pl.bclogic.pulsator4droid.library.PulsatorLayout>

                            <TextView
                                android:id="@+id/txt_near_panda"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/bnt_stop_receive"
                                android:layout_marginTop="@dimen/dim_20"
                                android:layout_marginBottom="@dimen/dim_30"
                                android:gravity="center"
                                android:text="@string/str_another_panda"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/bnt_stop_receive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/dim_30"
                                android:background="?attr/selectableItemBackground"
                                android:padding="@dimen/dim_10"
                                android:text="@string/action_cancel"
                                android:textAllCaps="true"
                                android:textColor="@color/gray"
                                android:textSize="16sp"
                                android:visibility="visible" />

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_connected"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_color"
                    android:paddingTop="@dimen/_10sdp"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/rl_top"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:background="@color/background_color">

                        <ImageView
                            android:id="@+id/img_logo1"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/icon" />

                        <TextView
                            android:id="@+id/tv_app_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_toRightOf="@id/img_logo1"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="@string/app_name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp" />
                    </RelativeLayout>

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_download"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@color/background_color"
                        app:tabGravity="fill"
                        app:tabIndicatorColor="@color/blue"
                        app:tabIndicatorFullWidth="false"
                        app:tabIndicatorHeight="@dimen/_2sdp"
                        app:tabMode="fixed" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/ll_boomLay"
                        android:layout_below="@+id/tab_download"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@color/white"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                    <RelativeLayout
                        android:id="@+id/ll_boomLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:background="@color/white"
                        android:elevation="@dimen/_3sdp"
                        android:paddingTop="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_15sdp">

                        <LinearLayout
                            android:id="@+id/ll_level1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_45sdp"
                            android:layout_marginRight="@dimen/_45sdp"
                            android:weightSum="2.0">

                            <TextView
                                android:id="@+id/tv_select"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_weight="1.0"
                                android:background="@drawable/unselect_button"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:padding="@dimen/_7sdp"
                                android:text="selected"
                                android:textAllCaps="true"
                                android:textColor="@color/blue" />

                            <TextView
                                android:id="@+id/tv_sendFile"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1.0"
                                android:background="@drawable/top_rounded_black_back"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:padding="@dimen/_7sdp"
                                android:text="SEND"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_level1"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_15sdp">

                            <ImageView
                                android:id="@+id/img_avatar1"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:src="@drawable/ic_avatar1" />

                            <ImageView
                                android:id="@+id/img_connection"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_toRightOf="@+id/img_avatar1"
                                android:src="@drawable/ic_connection" />

                            <ImageView
                                android:id="@+id/img_avatar2"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_toRightOf="@+id/img_connection"
                                android:src="@drawable/ic_avatar2" />

                            <TextView
                                android:id="@+id/tv_disconnect"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/roboto_medium"
                                android:padding="@dimen/_5sdp"
                                android:text="Disconnect"
                                android:textColor="@color/red" />


                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layFilesView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/layEmptyView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_80sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:src="@drawable/ic_main_pattern" />

                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView3"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center_horizontal"
                            android:text="@string/str_connect_device"
                            android:textAllCaps="true"
                            android:textColor="@color/string_color"
                            android:textSize="@dimen/_15sdp"
                            android:visibility="visible" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_1"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:alpha="0.7"
                                    android:gravity="center"
                                    android:text="1. "
                                    android:textColor="@color/string_color"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:alpha="0.7"
                                    android:gravity="center_horizontal"
                                    android:text="@string/str_select_send_Receive"
                                    android:textColor="@color/string_color"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:alpha="0.7"
                                    android:gravity="center"
                                    android:text="2. "
                                    android:textColor="@color/string_color"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:alpha="0.7"
                                    android:gravity="center_horizontal"
                                    android:text="@string/str_pressed_send"
                                    android:textColor="@color/string_color"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_50sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:alpha="0.7"
                                    android:gravity="center_horizontal"
                                    android:text="@string/str_pressed_receive"
                                    android:textColor="@color/string_color"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_50sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:alpha="0.7"
                                    android:text="@string/str_pressed_receive_step4"
                                    android:textColor="@color/string_color"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_50sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:alpha="0.7"
                                    android:gravity="center_horizontal"
                                    android:text="@string/str_pressed_receive_step1"
                                    android:textColor="@color/string_color"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_50sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:alpha="0.7"
                                    android:gravity="center_horizontal"
                                    android:text="@string/str_pressed_receive_step2"
                                    android:textColor="@color/string_color"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_50sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:alpha="0.7"
                                    android:text="@string/note1"
                                    android:textColor="@color/string_color"
                                    android:textSize="@dimen/_11sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>

                    </RelativeLayout>

                    <com.bbot.copydata.xender.ShimmerTextView
                        android:id="@+id/long_tap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="Device Connected"
                        android:textColor="@color/blue"
                        android:textSize="22sp"
                        android:visibility="gone" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_lay1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/banner_container"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_25sdp"
                        app:cardElevation="@dimen/_3sdp">

                        <FrameLayout
                            android:id="@+id/bottom_frame"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/lay_send_receive"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/txt_receive"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="@dimen/dim_10"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/img_down"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_send" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/txt_send"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/dim_10">

                                    <ImageView
                                        android:id="@+id/img_send"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_receive" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/txt_invite"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/dim_10">

                                    <ImageView
                                        android:id="@+id/img_invite"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_invite" />

                                </LinearLayout>

                            </LinearLayout>

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/banner_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lay_connected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/dim_10"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dim_10"
                        android:layout_weight="1"
                        android:background="@drawable/black_border_white_solid"
                        android:gravity="center"
                        android:padding="@dimen/dim_15">

                        <TextView
                            android:id="@+id/txt_disconnect"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingStart="@dimen/dim_5"
                            android:text="@string/str_disconnect"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/txt_send_files"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="@dimen/dim_10">

                        <ImageView
                            android:id="@+id/img_send_files"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_send_white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingStart="@dimen/dim_5"
                            android:text="@string/txt_send"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/directory"
                android:visibility="gone">

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/avi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:indicatorColor="@color/blue"
                    app:indicatorName="BallGridPulseIndicator" />

                <TextView
                    android:id="@+id/txt_messsage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avi"
                    android:layout_centerHorizontal="true"
                    android:text="loading..."
                    android:textColor="@color/white" />

            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</layout>